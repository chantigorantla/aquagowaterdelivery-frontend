<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/cardContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="16dp" android:layout_marginVertical="6dp" app:cardCornerRadius="12dp" app:cardElevation="2dp" app:cardBackgroundColor="@android:color/white">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp">

        <!-- Unread Indicator -->
        <View android:id="@+id/unreadIndicator" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="6dp" android:layout_marginEnd="12dp" android:background="@drawable/circle_blue" android:visibility="visible" />

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

            <!-- Title -->
            <TextView android:id="@+id/tvNotificationTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Notification Title" android:textColor="#1A1A2E" android:textSize="16sp" android:textStyle="bold" android:maxLines="2" android:ellipsize="end" />

            <!-- Message (Truncated - full message in detail screen) -->
            <TextView android:id="@+id/tvNotificationMessage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="This is the notification message..." android:textColor="#666666" android:textSize="14sp" android:maxLines="2" android:ellipsize="end" />

            <!-- Time -->
            <TextView android:id="@+id/tvNotificationTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="2 hours ago" android:textColor="#999999" android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
