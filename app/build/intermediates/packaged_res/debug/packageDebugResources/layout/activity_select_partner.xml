<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#F6F9FC" android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:background="#FFFFFF" android:elevation="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvBack" android:text="â†" android:textSize="24sp" android:textColor="#333333" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="Select Water Partner" android:textSize="18sp" android:textStyle="bold" android:textColor="#333333" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Location Info Card -->
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">

        <LinearLayout android:id="@+id/layoutLocation" android:orientation="horizontal" android:gravity="center_vertical" android:padding="14dp" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:text="ðŸ“" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <LinearLayout android:orientation="vertical" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">

                <TextView android:text="Your Location" android:textSize="11sp" android:textColor="#888888" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView android:id="@+id/tvCurrentLocation" android:text="Getting location..." android:textSize="14sp" android:textColor="#333333" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView android:text="Change â†’" android:textSize="12sp" android:textColor="#12A4E8" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Partners List Header -->
    <TextView android:text="Available Partners Near You" android:textSize="14sp" android:textStyle="bold" android:textColor="#666666" android:layout_marginHorizontal="16dp" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <!-- Loading Indicator -->
    <ProgressBar android:id="@+id/progressBar" android:layout_gravity="center" android:layout_marginTop="40dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <!-- No Partners Message -->
    <LinearLayout android:id="@+id/layoutNoPartners" android:orientation="vertical" android:gravity="center" android:padding="40dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:text="ðŸ˜”" android:textSize="48sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="No Partners Available" android:textSize="16sp" android:textStyle="bold" android:textColor="#333333" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="We're not serving your area yet. Please try again later." android:textSize="14sp" android:textColor="#666666" android:textAlignment="center" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Partners List -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvPartners" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:padding="12dp" android:clipToPadding="false"/>

</LinearLayout>
