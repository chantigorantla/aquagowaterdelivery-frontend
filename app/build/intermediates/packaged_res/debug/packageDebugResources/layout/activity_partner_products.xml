<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#F6F9FC" android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:background="#FFFFFF" android:elevation="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvBack" android:text="â†" android:textSize="24sp" android:textColor="#333333" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="My Products" android:textSize="18sp" android:textStyle="bold" android:textColor="#333333" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnAddProduct" android:text="+ Add" android:textSize="12sp" android:textColor="#FFFFFF" android:textAllCaps="false" android:backgroundTint="#12A4E8" android:paddingHorizontal="16dp" android:layout_width="wrap_content" android:layout_height="36dp"/>
    </LinearLayout>

    <!-- Stats Card -->
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">

        <LinearLayout android:orientation="horizontal" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

            <LinearLayout android:orientation="vertical" android:gravity="center" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">

                <TextView android:id="@+id/tvTotalProducts" android:text="0" android:textSize="24sp" android:textStyle="bold" android:textColor="#12A4E8" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView android:text="Total Products" android:textSize="12sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E0E0E0"/>

            <LinearLayout android:orientation="vertical" android:gravity="center" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">

                <TextView android:id="@+id/tvAvgPrice" android:text="â‚¹0" android:textSize="24sp" android:textStyle="bold" android:textColor="#4CAF50" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView android:text="Avg Price" android:textSize="12sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Loading -->
    <ProgressBar android:id="@+id/progressBar" android:layout_gravity="center" android:layout_marginTop="40dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <!-- Empty State -->
    <LinearLayout android:id="@+id/layoutEmpty" android:orientation="vertical" android:gravity="center" android:padding="40dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:text="ðŸ“¦" android:textSize="48sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="No Products Yet" android:textSize="16sp" android:textStyle="bold" android:textColor="#333333" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="Add your first product to start selling" android:textSize="14sp" android:textColor="#666666" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Products List -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvProducts" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:padding="12dp" android:clipToPadding="false"/>

</LinearLayout>
