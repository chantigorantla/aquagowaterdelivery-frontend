<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="#F5F5F5">

    <TextView android:id="@+id/tvBack" android:text="â† Back" android:textColor="#12A4E8" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Edit Profile" android:textSize="20sp" android:textStyle="bold" android:layout_marginHorizontal="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

