<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp" android:background="#FFFFFF" android:layout_marginBottom="8dp" android:gravity="center_vertical">

    <RadioButton android:id="@+id/radioButton" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="vertical" android:layout_marginStart="8dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:id="@+id/tvLabel" android:text="Home" android:textStyle="bold" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tvDefault" android:text="DEFAULT" android:textSize="10sp" android:textColor="#FFFFFF" android:background="#12A4E8" android:paddingHorizontal="6dp" android:paddingVertical="2dp" android:layout_marginStart="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView android:id="@+id/tvAddress" android:text="123 Main Street, City - 600000" android:textColor="#666666" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView android:id="@+id/btnEdit" android:src="@android:drawable/ic_menu_edit" android:padding="8dp" android:layout_width="36dp" android:layout_height="36dp"/>

    <ImageView android:id="@+id/btnDelete" android:src="@android:drawable/ic_menu_delete" android:padding="8dp" android:layout_width="36dp" android:layout_height="36dp"/>

</LinearLayout>
