<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:layout_marginVertical="6dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:id="@+id/tvOrderId" android:text="Order #1001" android:textStyle="bold" android:textSize="16sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tvOrderStatus" android:text="✅ Confirmed" android:textColor="#12A4E8" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Details -->
        <LinearLayout android:orientation="horizontal" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:id="@+id/tvOrderDate" android:text="Dec 25, 2024" android:textColor="#666666" android:textSize="12sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tvItemCount" android:text="2 items" android:textColor="#666666" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Total -->
        <TextView android:id="@+id/tvOrderTotal" android:text="₹105" android:textStyle="bold" android:textColor="#12A4E8" android:textSize="18sp" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <!-- Buttons -->
        <LinearLayout android:orientation="horizontal" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button android:id="@+id/btnTrack" android:text="Track" android:textSize="12sp" android:textColor="#FFFFFF" android:backgroundTint="#12A4E8" android:layout_width="0dp" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_height="40dp"/>

            <Button android:id="@+id/btnReorder" android:text="Reorder" android:textSize="12sp" android:textColor="#12A4E8" android:backgroundTint="#E3F2FD" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
