<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F6F9FC">

    <!-- Top Header -->
    <LinearLayout android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp" android:background="#12A4E8">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal">

            <!-- Profile Section -->
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                <TextView android:id="@+id/tvWelcome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Welcome, Partner" android:textColor="#FFFFFF" android:textSize="24sp" android:textStyle="bold"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Here's your business overview" android:textColor="#B3E5FC" android:textSize="14sp"/>
            </LinearLayout>

            <!-- Notification Icon with Badge -->
            <FrameLayout android:id="@+id/btnNotifications" android:layout_width="56dp" android:layout_height="56dp">

                <LinearLayout android:layout_width="50dp" android:layout_height="50dp" android:layout_gravity="center" android:background="@drawable/circle_white_alpha" android:gravity="center" android:padding="10dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ””" android:textSize="24sp"/>
                </LinearLayout>

                <TextView android:id="@+id/tvNotificationBadge" android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="top|end" android:background="@drawable/notification_badge_bg" android:gravity="center" android:text="0" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold" android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Online/Offline Toggle -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:background="@drawable/card_rounded_white_alpha" android:padding="14dp" android:gravity="center_vertical" android:orientation="horizontal">

            <View android:id="@+id/statusDot" android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/circle_green"/>

            <TextView android:id="@+id/tvOnlineStatus" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_weight="1" android:text="You're Online" android:textColor="#FFFFFF" android:textSize="15sp" android:textStyle="bold"/>

            <Switch android:id="@+id/switchOnline" android:layout_width="52dp" android:layout_height="52dp" android:checked="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@id/header" android:layout_above="@id/bottomNav" android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">

            <!-- Order Status Breakdown -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:text="ðŸ“Š Order Status Breakdown" android:textColor="#333333" android:textSize="18sp" android:textStyle="bold"/>

            <!-- Status Row 1: Confirmed + Dispatched -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                <!-- Confirmed -->
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" app:cardCornerRadius="16dp" app:cardElevation="4dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:gravity="center_vertical" android:orientation="horizontal" android:padding="20dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âœ…" android:textSize="32sp"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="14dp" android:orientation="vertical">

                            <TextView android:id="@+id/tvConfirmedCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="#2196F3" android:textSize="28sp" android:textStyle="bold"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Confirmed" android:textColor="#666666" android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Dispatched -->
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" app:cardCornerRadius="16dp" app:cardElevation="4dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:gravity="center_vertical" android:orientation="horizontal" android:padding="20dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“¦" android:textSize="32sp"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="14dp" android:orientation="vertical">

                            <TextView android:id="@+id/tvDispatchedCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="#FF9800" android:textSize="28sp" android:textStyle="bold"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dispatched" android:textColor="#666666" android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Status Row 2: Out for Delivery + Delivered -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:orientation="horizontal">

                <!-- Out for Delivery -->
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" app:cardCornerRadius="16dp" app:cardElevation="4dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:gravity="center_vertical" android:orientation="horizontal" android:padding="20dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸšš" android:textSize="32sp"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="14dp" android:orientation="vertical">

                            <TextView android:id="@+id/tvOutForDeliveryCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="#9C27B0" android:textSize="28sp" android:textStyle="bold"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Out for Delivery" android:textColor="#666666" android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Delivered -->
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" app:cardCornerRadius="16dp" app:cardElevation="4dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:gravity="center_vertical" android:orientation="horizontal" android:padding="20dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ‰" android:textSize="32sp"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="14dp" android:orientation="vertical">

                            <TextView android:id="@+id/tvDeliveredCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="#4CAF50" android:textSize="28sp" android:textStyle="bold"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delivered" android:textColor="#666666" android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Management Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:layout_marginBottom="16dp" android:text="Management" android:textColor="#333333" android:textSize="18sp" android:textStyle="bold"/>

            <!-- Management Cards -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="16dp" app:cardElevation="4dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                    <!-- My Products -->
                    <LinearLayout android:id="@+id/btnAddProduct" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="?attr/selectableItemBackground" android:gravity="center_vertical" android:orientation="horizontal" android:padding="20dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“¦" android:textSize="28sp"/>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="16dp" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="My Products" android:textColor="#333333" android:textSize="17sp" android:textStyle="bold"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="Manage your product catalog" android:textColor="#888888" android:textSize="13sp"/>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â†’" android:textColor="#CCCCCC" android:textSize="24sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:background="#EEEEEE"/>

                    <!-- Earnings Report -->
                    <LinearLayout android:id="@+id/btnEarnings" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="?attr/selectableItemBackground" android:gravity="center_vertical" android:orientation="horizontal" android:padding="20dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’°" android:textSize="28sp"/>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="16dp" android:orientation="vertical">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Earnings Report" android:textColor="#333333" android:textSize="17sp" android:textStyle="bold"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="View your earnings and payouts" android:textColor="#888888" android:textSize="13sp"/>
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â†’" android:textColor="#CCCCCC" android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View android:layout_width="match_parent" android:layout_height="24dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Chat Button -->
    <FrameLayout android:id="@+id/fabChat" android:layout_width="56dp" android:layout_height="56dp" android:layout_above="@id/bottomNav" android:layout_alignParentEnd="true" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp" android:background="@drawable/fab_chat" android:elevation="6dp" android:clickable="true" android:focusable="true">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="ðŸ¤–" android:textSize="24sp"/>
    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout android:id="@+id/bottomNav" android:layout_width="match_parent" android:layout_height="70dp" android:layout_alignParentBottom="true" android:background="#FFFFFF" android:elevation="12dp" android:gravity="center_vertical" android:orientation="horizontal">

        <!-- Home -->
        <LinearLayout android:id="@+id/navHome" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="?attr/selectableItemBackground" android:gravity="center" android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ " android:textSize="26sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home" android:textColor="#12A4E8" android:textSize="12sp" android:textStyle="bold"/>
        </LinearLayout>

        <!-- Orders -->
        <LinearLayout android:id="@+id/navOrders" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="?attr/selectableItemBackground" android:gravity="center" android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“‹" android:textSize="26sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Orders" android:textColor="#666666" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout android:id="@+id/navProfile" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="?attr/selectableItemBackground" android:gravity="center" android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ‘¤" android:textSize="26sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profile" android:textColor="#666666" android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
