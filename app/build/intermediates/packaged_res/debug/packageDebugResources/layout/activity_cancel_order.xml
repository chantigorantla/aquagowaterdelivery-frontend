<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="#F5F5F5">

    <TextView android:id="@+id/tvBack" android:text="â† Back" android:textColor="#12A4E8" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Cancel Order" android:textSize="20sp" android:textStyle="bold" android:layout_marginHorizontal="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvOrderId" android:text="Order #1001" android:textColor="#666666" android:layout_marginHorizontal="16dp" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Why are you cancelling?" android:textSize="16sp" android:layout_marginHorizontal="16dp" android:layout_marginTop="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <RadioGroup android:id="@+id/radioGroupReason" android:orientation="vertical" android:layout_marginHorizontal="16dp" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <RadioButton android:text="Changed my mind" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:text="Found better price elsewhere" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:text="Ordered by mistake" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:text="Delivery time too long" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:text="Other reason" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RadioGroup>

    <ProgressBar android:id="@+id/progressBar" android:visibility="gone" android:layout_gravity="center" android:layout_margin="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal" android:layout_margin="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button android:id="@+id/btnBack" android:text="Go Back" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_width="0dp" android:layout_height="48dp"/>

        <Button android:id="@+id/btnConfirmCancel" android:text="Confirm Cancel" android:textColor="#FFFFFF" android:backgroundTint="#F44336" android:layout_weight="1" android:layout_width="0dp" android:layout_height="48dp"/>
    </LinearLayout>

</LinearLayout>
