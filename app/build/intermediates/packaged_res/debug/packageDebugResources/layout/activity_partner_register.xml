<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F5F5F5">

    <LinearLayout android:orientation="vertical" android:padding="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Back -->
        <TextView android:id="@+id/tvBack" android:text="â† Back" android:textColor="#12A4E8" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <!-- Header -->
        <TextView android:text="Partner Registration" android:textSize="24sp" android:textStyle="bold" android:layout_marginTop="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="Create your partner account to start selling" android:textColor="#666666" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <!-- Form -->
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:hint="Full Name">

            <EditText android:id="@+id/etName" android:inputType="textPersonName" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:hint="Email">

            <EditText android:id="@+id/etEmail" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:hint="Phone Number">

            <EditText android:id="@+id/etPhone" android:inputType="phone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:hint="Business Name">

            <EditText android:id="@+id/etBusinessName" android:inputType="text" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:hint="UPI ID (e.g., name@upi)">

            <EditText android:id="@+id/etUpiId" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:hint="Password">

            <EditText android:id="@+id/etPassword" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:hint="Confirm Password">

            <EditText android:id="@+id/etConfirmPassword" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Loading -->
        <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="16dp" android:visibility="gone"/>

        <!-- Register Button -->
        <Button android:id="@+id/btnRegister" android:text="Register as Partner" android:textColor="#FFFFFF" android:backgroundTint="#12A4E8" android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="52dp"/>

        <!-- Login Link -->
        <LinearLayout android:orientation="horizontal" android:gravity="center" android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:text="Already have an account?" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tvLogin" android:text=" Login" android:textColor="#12A4E8" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
