<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="#F5F5F5">

    <TextView android:id="@+id/tvBack" android:text="â† Back" android:textColor="#12A4E8" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Select Delivery Address" android:textSize="20sp" android:textStyle="bold" android:layout_marginHorizontal="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <!-- No Address View -->
    <LinearLayout android:id="@+id/layoutNoAddress" android:orientation="vertical" android:gravity="center" android:visibility="gone" android:layout_margin="32dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:text="No saved addresses" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Addresses Container -->
    <LinearLayout android:id="@+id/layoutAddresses" android:orientation="vertical" android:layout_margin="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <RadioGroup android:id="@+id/radioGroupAddresses" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>

    <ProgressBar android:id="@+id/progressBar" android:visibility="gone" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnAddAddress" android:text="+ Add New Address" android:textColor="#12A4E8" android:background="@android:color/transparent" android:layout_marginHorizontal="16dp" android:layout_width="match_parent" android:layout_height="48dp"/>

    <View android:layout_weight="1" android:layout_width="match_parent" android:layout_height="0dp"/>

    <Button android:id="@+id/btnProceed" android:text="Proceed" android:textColor="#FFFFFF" android:backgroundTint="#12A4E8" android:layout_margin="16dp" android:layout_width="match_parent" android:layout_height="52dp"/>

</LinearLayout>
