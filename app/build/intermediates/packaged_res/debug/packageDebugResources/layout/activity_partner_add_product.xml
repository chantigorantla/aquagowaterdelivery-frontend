<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#F6F9FC" android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical" android:background="#FFFFFF" android:elevation="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvBack" android:text="â† Back" android:textColor="#12A4E8" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:text="Add Product" android:textSize="18sp" android:textStyle="bold" android:gravity="center" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>

        <View android:layout_width="48dp" android:layout_height="1dp"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">

        <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

            <!-- Product Image Picker -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">

                <FrameLayout android:id="@+id/layoutImagePicker" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#E8F4FD" android:foreground="?attr/selectableItemBackground">

                    <!-- Preview Image -->
                    <ImageView android:id="@+id/imgProductPreview" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:visibility="gone"/>

                    <!-- Placeholder -->
                    <LinearLayout android:id="@+id/layoutPlaceholder" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">

                        <TextView android:text="ðŸ“·" android:textSize="48sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                        <TextView android:text="Tap to add product image" android:textColor="#12A4E8" android:textSize="14sp" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                        <TextView android:text="(Optional)" android:textColor="#999999" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Change Image Button (visible when image selected) -->
                    <TextView android:id="@+id/tvChangeImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom|end" android:layout_margin="8dp" android:background="@drawable/btn_rounded_white" android:padding="8dp" android:text="ðŸ“· Change" android:textColor="#12A4E8" android:textSize="12sp" android:visibility="gone"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Product Name (Optional) -->
            <EditText android:id="@+id/etProductName" android:hint="Product Name (Optional)" android:inputType="text" android:padding="14dp" android:background="@drawable/edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <!-- Can Size -->
            <EditText android:id="@+id/etCanSize" android:hint="Water Can Size (eg: 20L)" android:inputType="text" android:padding="14dp" android:background="@drawable/edit_text_bg" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <!-- Price -->
            <EditText android:id="@+id/etPrice" android:hint="Price (â‚¹)" android:inputType="number" android:padding="14dp" android:background="@drawable/edit_text_bg" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <!-- Quantity Available -->
            <EditText android:id="@+id/etQuantity" android:hint="Available Quantity" android:inputType="number" android:padding="14dp" android:background="@drawable/edit_text_bg" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <!-- Description (Optional) -->
            <EditText android:id="@+id/etDescription" android:hint="Description (Optional)" android:inputType="textMultiLine" android:minLines="3" android:gravity="top" android:padding="14dp" android:background="@drawable/edit_text_bg" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <!-- Upload Progress -->
            <LinearLayout android:id="@+id/layoutUploadProgress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:gravity="center" android:orientation="horizontal" android:visibility="gone">

                <ProgressBar android:layout_width="24dp" android:layout_height="24dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:text="Uploading image..." android:textColor="#666666"/>
            </LinearLayout>

            <!-- Save Button -->
            <Button android:id="@+id/btnSaveProduct" android:text="Save Product" android:textColor="#FFFFFF" android:backgroundTint="#12A4E8" android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="52dp"/>
        </LinearLayout>
    </ScrollView>

    <ProgressBar android:id="@+id/progressBar" android:visibility="gone" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>
