<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="24dp" android:gravity="center" android:background="#FFFFFF">

    <TextView android:text="Welcome" android:textSize="22sp" android:textStyle="bold" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <TextView android:text="Please enter your details to continue." android:textSize="14sp" android:textColor="#777" android:layout_gravity="center_horizontal" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <TextView android:text="Customer Login" android:textSize="16sp" android:textStyle="bold" android:textColor="#12A4E8" android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <EditText android:id="@+id/etEmail" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="20dp" android:hint="Enter your Email" android:inputType="textEmailAddress" android:padding="12dp" android:background="@drawable/edit_text_bg" />

    <EditText android:id="@+id/etPassword" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="12dp" android:hint="Enter your password" android:inputType="textPassword" android:padding="12dp" android:background="@drawable/edit_text_bg" />

    <TextView android:id="@+id/tvForgotPassword" android:text="Forgot password?" android:textColor="#12A4E8" android:layout_gravity="end" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="16dp" android:visibility="gone" />

    <Button android:id="@+id/btnSignIn" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="20dp" android:text="Sign In" android:background="@drawable/btn_primary1" android:textColor="#FFFFFF" />

    <TextView android:id="@+id/tvSignUp" android:text="Don't have an account? Sign Up" android:textColor="#12A4E8" android:layout_gravity="center_horizontal" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>
